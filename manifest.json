{
  "manifest_version": 3,
  "name": "Workana Project Monitor",
  "version": "1.0.0",
  "description": "Monitor Workana for new projects and get notifications",
  
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "background"
  ],
  
  "host_permissions": [
    "https://www.workana.com/*",
    "http://localhost:5000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.workana.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Workana Monitor Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}